{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://json-schema.org/draft-07/schema#",
    "title": "ads.json schema",
	"type": "object",
	"properties": {
		"advertisements": {
			"type": "object",
			"patternProperties": {
				"^.*$": {
					"type": "object",
					"properties": {
						"title": {
							"type": "string",
							"minLength": 1
						},
						"description": {
							"type": "string",
							"minLength": 1
						},
						"target_url": {
							"type": "string",
							"pattern": "^https?:\\/\\/(?:www\\.)?[-a-zA-Z0-9@:%._\\+~#=]{1,256}\\.[a-zA-Z0-9()]{1,6}\\b(?:[-a-zA-Z0-9()@:%_\\+.~#?&\\/=]*)$"
						}
					},
					"required": [
						"title", "description", "target_url"
					]
				}
			},
			"additionalProperties": false
		},
		"presentations": {
			"type": "object",
			"patternProperties": {
				"^.*$": {
					"type": "object",
					"properties": {
						"template": {
							"type": "string",
							"minLength": 1
						},
						"advertisements": {
							"type": "array",
							"items": {
								"type": "string",
								"minLength": 1
							}
						},
						"selector": {
							"type": "string",
							"minLength": 1
						}
					},
					"required": [
						"template",
						"selector"
					]
				}
			},
			"additionalProperties": false
		}
	},
	"required": [
		"advertisements",
		"presentations"
	]
}